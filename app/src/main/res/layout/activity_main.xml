<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/biodatapribadiTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Biodata Pribadi"
        android:textColor="#000"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.131" />

    <EditText
        android:id="@+id/namaandaEt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_et"
        android:padding="5dp"
        android:hint="Nama anda"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/biodatapribadiTv"
        app:layout_constraintVertical_bias="0.107" />

    <EditText
        android:id="@+id/umurandaEt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_et"
        android:hint="Umur anda"
        android:padding="5dp"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/namaandaEt"
        app:layout_constraintVertical_bias="0.091" />

    <Button
        android:id="@+id/lanjutkanBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_btn"
        android:text="Lanjutkan"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/umurandaEt"
        app:layout_constraintVertical_bias="0.15" />


</androidx.constraintlayout.widget.ConstraintLayout>